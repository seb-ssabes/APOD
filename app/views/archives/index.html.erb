<div class="container mx-auto p-4 mb-10">
  <h1>Nasa's Astronomy Picture of the Day Archive</h1>
  <div>
    <%= link_to "Todays' Picture", root_path %>
    <%= link_to "Search (home)", root_path %>
  </div>
  <div class="flex justify-center mb-10">

    <div class="my-8">
      <% @paginated_data.each do |data| %>
        <div class="border-b pb-2 mb-4">
          <p><%= data['date'] %>: <%= link_to data["title"], apod_date_path(data['date']), class: "text-gray-500 hover:underline" %></p>
        </div>
      <% end %>
    </div>

    

  </div>
</div>
