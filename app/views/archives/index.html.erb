<div class="h-screen bg-gray-50">
  <header>
    <div class="container mx-auto p-4 text-center">
      <h1 class="font-bold text-4xl">Astronomy Picture of the Day</h1>
      <h2 class="font-bold text-xl text-gray-400">Archive</h2>
    </div>
  </header>

  <div class="flex flex-col items-center justify-between">
    <div class="grid grid-cols-2 gap-6 w-full max-w-6xl px-4 flex-grow">
      <% @apod_data.each_slice(15).to_a.each_with_index do |group, index| %>
        <div>
          <% group.each do |data| %>
            <div class="border-b pb-2 mb-2">
              <p>
                <%= data['date'] %>:
                <%= link_to data["title"], apod_date_path(data['date']), class: "text-gray-500 hover:underline" %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>
      <div class="flex flex-row my-4">
        <%= link_to "Previous 30 days", archives_path(page: params[:page].to_i + 1), class: "btn" %>
        <% if params[:page].to_i > 0 %>
          <%= link_to "Next 30 days", archives_path(page: params[:page].to_i - 1), class: "btn ml-3" %>
        <% end %>
    </div>
  </div>
</div>
