<div class="container mx-auto p-4 mb-10">
  <h1 class="font-bold text-4xl text-center"><%= @apod_data['title'] %></h1>
  <p class="text-sm text-gray-500 text-center"><%= @apod_data['date'] %></p>

  <% if @apod_data['url'].include?("youtube")  %>
    <iframe class="m-auto w-4/5 h-[60vw] max-w-[500px] max-h-[500px] rounded shadow-md my-5" src="<%= @apod_data['url'] %>"></iframe>
  <% else %>
    <img src="<%= @apod_data['url'] %>" class="rounded shadow-md mx-auto my-5 w-1/2 h-1/2">
  <% end %>

  <h3 class="font-bold text-2xl text-gray-500 text-center">Image credit and copyright: <%= @apod_data['copyright'] %></h3>

  <div class="h-52 overflow-hidden mt-4 text-justify">
    <span data-controller="typed" data-typed-strings-value='["<%= @apod_data['explanation'] %>"]'>
      <%= @apod_data['explanation'] %>
    </span>
  </div>

  <div class="flex justify-center mb-10">
    <a href="<%= apod_date_path((@apod_data['date'].to_date - 1).to_s) %>" class="flex items-center justify-center px-4 h-10 me-3 text-base font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
      <svg class="w-3.5 h-3.5 me-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
      </svg>
      Previous
    </a>

    <% if @apod_data['date'].to_date < Date.today  %>
      <a href="<%= apod_date_path((@apod_data['date'].to_date + 1).to_s) %>" class="flex items-center justify-center px-4 h-10 text-base font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        Next
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    <% else %>
        <div class="ml-24"></div>
    <% end %>
  </div>
</div>
